@model List<EmployeeModel>
@{
    ViewData["Title"] = "Employees";
}

<h2>All employees</h2>

<a asp-controller="Employee" asp-action="AllDepartments" asp-route-id="">View all departments</a>
<br />

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Birth Year</th>
        <th>Department</th>
        <th>Profession</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Surname</td>
            <td>@employee.BirthYear</td>
            <td>@employee.Department</td>
            <td>@employee.Profession</td>
        </tr>
    }
</table>