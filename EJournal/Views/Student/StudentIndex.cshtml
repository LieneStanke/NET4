@model List<StudentModel>
@{
    ViewData["Title"] = "List of students";
}

<h2>All students</h2>

<a asp-controller="Grade" asp-action="AverageGrade" asp-route-id="">View every students average grade</a>
<br />
<br />

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Day of Birth</th>
        <th>Class</th>
        <th></th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Surname</td>
            <td>@student.BirthYear</td>
            <td>@student.Class</td>
            <td><a asp-controller="Grade" asp-action="StudentGrades" asp-route-id="">View all grades</a></td>
        </tr>
    }
</table>