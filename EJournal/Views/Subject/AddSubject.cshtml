@model SubjectModel
@{
    ViewData["Title"] = "Add new subject";
}

<h2>Add new subject</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Subject" asp-action="AddSubject" method="post">
    <div class="form-group">
        <label asp-for="SubjectName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="SubjectName">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>